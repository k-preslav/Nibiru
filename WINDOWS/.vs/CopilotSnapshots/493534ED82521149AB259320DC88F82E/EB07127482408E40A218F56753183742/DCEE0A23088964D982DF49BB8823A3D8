namespace NibiruWIN_Runtime
{
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();

            var json = @"
            {
                ""type"": ""stack"",
                ""orientation"": ""vertical"",
                ""horizontalAlignment"": ""center"",
                ""verticalAlignment"": ""center"",
                ""children"": [
                    { ""type"": ""text"", ""text"": ""Hello from JSON"" },
                    { ""type"": ""button"", ""text"": ""This is real UI"", ""margin"": { ""left"": 0, ""top"": 10, ""right"": 0, ""bottom"": 0 } }
                ]
            }";

            var root = JsonAtomParser.Parse(json);
            RootContent.Content = root.Build();
        }
    }
}}